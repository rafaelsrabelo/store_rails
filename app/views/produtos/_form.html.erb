<% @produto.errors.full_messages.each do |msg| %>
  <div class="alert alert-danger" role="alert">
    <%= msg %>
  </div>
<% end %>
<h3 class="lead">Cadastro de produto</h3>
<div class="form-group">
  <%= form_for @produto do |form| %>
    <div class="row">
      <div class="col-sm-12">
        <div class="form-group">
          <%= form.label :nome %>
          <%= form.text_field :nome, class:"form-control" %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12">
        <div class="form-group">
          <%= form.label :descricao %>
          <%= form.text_area :descricao, class:"form-control", rows:4 %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12">
        <div class="form-group">
          <%= form.label :departatmento  %>
          <%= form.collection_select :departamento_id, @departamentos, :id, :nome, {}, class:"form-control" %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12">
        <div class="form-group">
          <%= form.label :preco %>
          <%= form.number_field :preco, step:0.01, class:"form-control" %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12">
        <div class="form-group">
          <%= form.label :quantidade %>
          <%= form.number_field :quantidade, class:"form-control" %>
        </div>
      </div>
    </div>
    <%= form.submit text_do_botao, class:"btn btn-primary" %>
  <% end %>
</div>