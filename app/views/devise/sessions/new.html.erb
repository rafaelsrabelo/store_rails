<div class="login-container">
  <div class="content">
    <div class="formulary">
      <div class="logo">
        <%= image_tag("dindin.png", { style: "height:80px;width:80px;"}) %>
      </div>
      <h4 class="login-title">Login</h4>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="inputs">
          <div class="input-group">
            <label for="exampleInputEmail1">Email</label>
            <%= f.email_field :email, class:"", autofocus: true, autocomplete: "email", placeholder: "Digite seu email" %>
          </div>

          <div class="input-group">
            <label for="exampleInputPassword1">Senha</label>
            <%= f.password_field :password, class:"", autocomplete: "current-password", placeholder: "Digite sua senha" %>
          </div>

          <% if devise_mapping.rememberable? %>
          <% end %>
          </div>
          <div class="remember-check">
            <%= f.check_box :remember_me  %>
            <span for="exampleCheck1">Lembrar</span>
          </div>
        <div class="actions">
          <%= f.submit "Entrar", class:"btn btn-primary", id:"btn-confirm" %>
        </div>
        <% end %>
    </div>
  </div>
</div>
