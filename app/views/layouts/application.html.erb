<!DOCTYPE html>
<html>
  <head>
    <title>Dindin da LÃ©ia</title>
    <%= csrf_meta_tags %>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700;900&display=swap" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <header class="header-container">
      <div class="header-left-content">
        <%= link_to root_url do %>
          <%= image_tag("dindin.png", { style: "height:60px;width:60px;"}) %>
        <% end %>
        
        <div class="options-container">
            <%= menu_item "Novo produto", new_produto_path, class:"option" %>
            <%= menu_item "Nova categoria", departamentos_path, class:"option" %>
        </div>
      </div>
      <div class="header-right-content">
        <div class="search-container">
          <%= form_tag busca_produto_path, method: :get, class:"form-search" do %>
            <%= text_field_tag :nome, @nome , class:"", placeholder:"Digite..." %>
            <%= image_tag("search_white_24dp.svg", { style: "height:30px;width:30px;cursor:pointer"}) %>
          <% end %>  
        </div>
        <div class="logout">
          <%= link_to destroy_admin_session_path, method: :delete do %>
            <%= image_tag("logout_white.svg", { style: "height:30px;width:30px;cursor:pointer"}) %>
          <% end %>
        </div>
      </div>
    </header>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
